<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size android:width="32dp"
                android:height="32dp"/>
            <gradient android:endColor="@color/mid_blue_1"
                android:startColor="@color/darkblue"
                android:angle="0"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="32dp"
                android:height="32dp"/>
            <gradient android:endColor="@color/darkblue"
                android:startColor="@color/mid_blue_1"
                android:angle="0"/>
        </shape>
    </item>
</selector>