<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:layoutDirection="rtl"
    android:background="@drawable/bg_req_lightgray_stroke">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/provider_Img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_user_gray"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/provider_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/provider_Img"
        android:text="مغسلة الوفا الجديدة"
        style="@style/text_darkblue_bold_16"
        android:layout_marginStart="10dp"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@id/provider_Img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/provider_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/provider_Img">
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/02/2020"
            style="@style/text_darkblue_bold_14"
            android:drawableStart="@drawable/ic_timer"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:12 AM"
            android:layout_marginStart="10dp"
            style="@style/text_darkblue_roman_14"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_order_type_canceled"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/provider_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/provider_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_req_white_stroke"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="303030"
            style="@style/text_darkblue_1_roman_14"
            android:drawableStart="@drawable/ic_code"
            android:drawablePadding="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            style="@style/text_darkblue_1_bold_14"
            android:drawableStart="@drawable/ic_code"
            android:drawablePadding="6dp"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ريال سعودي"
            style="@style/text_darkblue_1_roman_12"
            android:layout_marginStart="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غسيل سيارات"
            style="@style/text_white_roman_12"
            android:paddingBottom="5dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_req_purple_gradiant"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>