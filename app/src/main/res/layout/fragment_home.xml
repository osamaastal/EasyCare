<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="0dp"
        android:background="@drawable/bg_mid_blue"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/bg_circle_midblue"
            android:src="@drawable/ic_search_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/bg_circle_midblue"
            android:src="@drawable/ic_menu_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="@drawable/bg_mid_blue_50dp">

        <com.github.islamkhsh.CardSliderViewPager
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layoutDirection="locale"
            android:id="@+id/viewPager"
            android:layout_marginTop="24dp"
            app:cardSlider_smallScaleFactor="0.8"
            app:cardSlider_otherPagesWidth="18dp"
            app:cardSlider_pageMargin="10dp"
            app:auto_slide_time="10"
            android:layout_marginBottom="40dp"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <ProgressBar
            android:background="@drawable/bg_circle_white"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/viewPager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/progress1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layoutDirection="locale"
            tools:context=".fragments.Home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_req_dark_blue_0_0_50_0"

                android:paddingTop="70dp"
                android:paddingBottom="40dp">
                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/our_services"
                    style="@style/text_white_bold_18"
                    android:layout_marginStart="33dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/more_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    style="@style/text_white_roman_14"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_req_darkblue_16dp"
                    android:layout_marginEnd="26dp"
                    android:gravity="top"

                    app:layout_constraintTop_toTopOf="@id/tx1"
                    app:layout_constraintBottom_toBottomOf="@id/tx1"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/RV_server"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/progress2"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/RV_server"
                    tools:listitem="@layout/row_home_our_services"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/tx1"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_rates"
                    style="@style/text_darkblue_bold_18"
                    android:layout_marginStart="33dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    style="@style/text_white_roman_14"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_req_darkblue_16dp"
                    android:layout_marginEnd="26dp"
                    android:gravity="top"
                    app:layout_constraintTop_toTopOf="@id/tx2"
                    app:layout_constraintBottom_toBottomOf="@id/tx2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/more_rate"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/RV_top_rate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/progress3"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tx2"
                    android:layout_marginEnd="0dp"
                    android:id="@+id/RV_top_rate"
                    tools:listitem="@layout/row_home_more_rates"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
                <TextView
                    android:id="@+id/tx3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_asked"
                    style="@style/text_darkblue_bold_18"
                    android:layout_marginStart="33dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    style="@style/text_white_roman_14"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_req_darkblue_16dp"
                    android:layout_marginEnd="26dp"
                    android:gravity="top"
                    app:layout_constraintTop_toTopOf="@id/tx3"
                    app:layout_constraintBottom_toBottomOf="@id/tx3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/more_request"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/RV_top_request"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/progress4"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintTop_toBottomOf="@+id/tx3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/RV_top_request"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    tools:listitem="@layout/row_home_more_rates"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginBottom="60dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

