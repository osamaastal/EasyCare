<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مركبة رقم"
            style="@style/text_darkblue_bold_16"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/car_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginStart="8dp"
            style="@style/text_darkblue_bold_18"
            />
        <TextView
            android:id="@+id/car_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/small"
            style="@style/text_white_roman_14"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_req_green_gradiant_30dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@+id/linear1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>