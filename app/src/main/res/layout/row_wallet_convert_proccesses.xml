<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="11dp"
    android:layout_marginBottom="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_req_gray_28dp_stroke"
        app:layout_constraintTop_toTopOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_user_gray_big"
            android:background="@drawable/bg_circle_gray_stroke"
            android:scaleType="centerCrop"
            android:layout_marginTop="28dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/userName_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="osama yousef astal"
            style="@style/text_darkblue_bold_16"
            android:layout_marginStart="10dp"
            android:maxLength="18"
            app:layout_constraintStart_toEndOf="@+id/userImg"
            app:layout_constraintTop_toTopOf="@+id/userImg"
            />
        <ImageView
            android:id="@+id/order_status"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_order_type_canceled"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/userName_tv"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:id="@+id/dateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toEndOf="@id/userImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName_tv"
            app:layout_constraintBottom_toBottomOf="@id/userImg">
            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/02/2020"
                style="@style/text_darkblue_bold_14"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:12 AM"
                android:layout_marginStart="10dp"
                style="@style/text_darkblue_bold_14"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nb"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTime"
            app:layout_constraintBottom_toTopOf="@+id/bottom"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginEnd="-40dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_req_green_gradiant_30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/services"
                    style="@style/text_white_roman_12"
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:id="@+id/nb_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    style="@style/text_white_bold_16"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:paddingStart="45dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_req_green_gradiant_30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/products"
                    style="@style/text_white_roman_12"
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:id="@+id/nb_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    style="@style/text_white_bold_16"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            app:layout_constraintTop_toBottomOf="@+id/nb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_req_white_28dp_stroke"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="26dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="303030"
                    android:gravity="center"
                    style="@style/text_darkblue_1_roman_14"
                    android:drawableStart="@drawable/ic_order_number"
                    android:drawablePadding="6dp"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80.00"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    style="@style/text_darkblue_1_bold_18"
                    android:drawableStart="@drawable/ic_price_circle"
                    android:drawablePadding="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ريال"
                    style="@style/text_darkblue_1_roman_10"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/payment_way_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اونلاين"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    style="@style/text_darkblue_1_roman_14"
                    android:drawableStart="@drawable/ic_payment_card_icon"
                    android:drawablePadding="6dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>