<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <View
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:background="@drawable/bg_line_sheet"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/contact_us_img"
                android:visibility="visible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_problem"
                style="@style/text_darkblue_bold_24"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easycare_app_txt"
                style="@style/text_darkblue_roman_16_special"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                />
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_shadow_type="outer"
                app:neomorph_layer_type="software"
                app:neomorph_background_color="@color/white_bg"
                app:neomorph_corner_radius="35dp"
                app:neomorph_elevation="@dimen/neomorph_view_elevation"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_color="#E1E1E1"
                app:neomorph_highlight_color="@color/white_fcfcfc"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp">
                <Spinner
                    android:id="@+id/categories_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    style="@style/ContactUs_SpinnerTheam"
                    />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_shadow_type="outer"
                app:neomorph_layer_type="software"
                app:neomorph_background_color="@color/white"
                app:neomorph_corner_radius="35dp"
                app:neomorph_elevation="@dimen/neomorph_view_elevation"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_color="#E1E1E1"
                app:neomorph_highlight_color="@color/white_fcfcfc"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp">
                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_trans"
                    android:drawableStart="@drawable/report_title_img"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:drawablePadding="15dp"
                    android:hint="@string/report_title"
                    style="@style/text_black_roman_14"
                    android:maxLength="30"
                    />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp">
                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_layer_type="software"
                    app:neomorph_background_color="@color/white"
                    app:neomorph_corner_radius="35dp"
                    app:neomorph_elevation="@dimen/neomorph_view_elevation"
                    app:neomorph_view_type="rectangular"
                    app:neomorph_shadow_color="#E1E1E1"
                    app:neomorph_highlight_color="@color/white_fcfcfc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <EditText
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_trans"
                        android:paddingStart="65dp"
                        android:paddingEnd="15dp"
                        android:hint="@string/report_content"
                        style="@style/text_black_roman_14"
                        android:maxLength="200"
                        android:gravity="top"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:minHeight="100dp"
                        />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/report_content1"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_shadow_type="outer"
                app:neomorph_layer_type="software"
                app:neomorph_background_color="@color/white"
                app:neomorph_corner_radius="35dp"
                app:neomorph_elevation="@dimen/neomorph_view_elevation"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_color="#6376AE"
                app:neomorph_highlight_color="@color/white_fcfcfc"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp">
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/send_now"
                    android:textAllCaps="false"
                    style="@style/text_white_roman_18"
                    android:background="@drawable/bg_req_darkblue_50dp_gradiant_x"
                    android:drawableEnd="@drawable/ic_check_drawable"
                    android:paddingStart="60dp"
                    android:paddingEnd="15dp"
                    />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/whatup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_whatsapp"
                    android:background="@drawable/bg_req_green_gradiant_30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    />
                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_call"
                    android:background="@drawable/bg_req_darkblue_50dp_gradiant_x"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    />
                <ImageButton
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_email_white"
                    android:background="@drawable/bg_req_pink_30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>