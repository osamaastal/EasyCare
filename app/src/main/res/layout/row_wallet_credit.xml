<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_card_credit"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layoutDirection="rtl">
    <ImageView
        android:id="@+id/cardImg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo_white"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/cardname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyCare card"
        style="@style/text_white_roman_16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImg"
        />
    <TextView
        android:id="@+id/balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="199.99"
        style="@style/text_white_bold_24"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardname_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SR"
        style="@style/text_white_bold_18"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/balance_tv"
        app:layout_constraintTop_toTopOf="@+id/balance_tv"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/sim"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/balance_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9690"
                style="@style/text_white_bold_14"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                />
            <TextView
                android:id="@+id/cardNumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                style="@style/text_white_bold_14"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cardDate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/12"
            style="@style/text_white_bold_12"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>